<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterUserActivity"
    android:background="#04375c">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="50dp"
        android:textSize="40dp"
        android:text="Регистрация" />

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="50dp"
        android:textSize="13dp"
        android:text="Потребителско име:" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/textUsername"
        android:shape = "rectangle"
        android:background = "@drawable/border"
        android:textColor="@color/black"
        android:padding="10dp"
        android:ems="10"
        android:inputType="text"
       />

    <TextView
        android:id="@+id/textName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="410dp"
        android:layout_marginRight="50dp"
        android:textSize="13dp"
        android:text="Име:" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:layout_marginLeft="390dp"
        android:shape = "rectangle"
        android:textColor="@color/black"
        android:background = "@drawable/border"
        android:padding="10dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textSurname"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editName"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="50dp"
        android:textSize="13dp"
        android:text="Фамилия:" />

    <EditText
        android:id="@+id/editSurname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSurname"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:shape = "rectangle"
        android:background = "@drawable/border"
        android:padding="10dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editName"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="410dp"
        android:layout_marginRight="50dp"
        android:textSize="13dp"
        android:text="Имейл:" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmail"
        android:layout_marginLeft="390dp"
        android:shape = "rectangle"
        android:textColor="@color/black"
        android:background = "@drawable/border"
        android:padding="10dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEmail"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="50dp"
        android:textSize="13dp"
        android:text="Телефонен номер:" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPhone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:shape = "rectangle"
        android:textColor="@color/black"
        android:background = "@drawable/border"
        android:padding="10dp"
        android:ems="10"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEmail"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="410dp"
        android:layout_marginRight="50dp"
        android:textSize="13dp"
        android:text="Парола:" />


    <EditText
        android:id="@+id/editPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPassword"
        android:layout_marginLeft="390dp"
        android:shape = "rectangle"
        android:textColor="@color/black"
        android:background = "@drawable/border"
        android:padding="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"

        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:backgroundTint="@color/blue"
        android:layout_below="@id/editPassword"
        android:text="Регистиране"
        android:onClick="registerUser"/>


</RelativeLayout>