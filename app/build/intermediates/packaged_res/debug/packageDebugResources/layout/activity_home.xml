            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/listRoomType1"
            android:text="двойна"
            android:textSize="16sp"
            android:layout_toEndOf="@id/textRoomType1"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/listLocation1"
            />


        <Button
            android:id="@+id/makeReservation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="30dp"
            android:layout_below="@+id/priceText1"
            android:layout_toEndOf="@id/listImage1"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:backgroundTint="@color/blue"
            android:text="Добавяне"
            android:onClick="btnMakeReservation"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceText1"
            android:text="Цена: "
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="210dp"
            android:layout_below="@id/textRoomType1"
